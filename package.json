{
  "name": "six-cities",
  "version": "1.0.0",
  "private": true,
  "description": "Личный проект «Шесть городов» от HTML Academy",
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server",
    "eslint": "eslint --ext .jsx --ext .js src/",
    "test": "npm run eslint && npm run test.jest",
    "test.jest": "jest"
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-htmlacademy": "0.5.2",
    "eslint-plugin-react": "7.18",
    "webpack": "4.41",
    "webpack-cli": "3.3",
    "webpack-dev-server": "3.10",
    "@babel/core": "7.12.3",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.5",
    "babel-loader": "8",
    "style-loader": "2.0.0",
    "css-loader": "4.3.0",
    "file-loader": "6.1.1",
    "redux-devtools-extension": "2.13",
    "jest": "25.1",
    "react-test-renderer": "16.12"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "leaflet": "1.7.1",
    "prop-types": "15.7",
    "react": "16.12",
    "react-dom": "16.12",
    "react-router-dom": "5.2.0",
    "react-redux": "7.2.1",
    "redux": "4.0.5",
    "axios": "0.19",
    "redux-thunk": "2.3",
    "reselect": "4",
    "history": "4.10"
  },
  "jest": {
    "verbose": true,
    "setupFiles": ["<rootDir>/jest.setup.js"],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/$1"
    ],
    "moduleNameMapper": {
      "^@components(.*)$": "<rootDir>/src/components/$1",
      "^@store(.*)$": "<rootDir>/src/store/$1",
      "^@const(.*)$": "<rootDir>/src/const.js",
      "^@props(.*)$": "<rootDir>/src/utils/prop-types.js",
      "^@utils(.*)$": "<rootDir>/src/utils/$1",
      "^@hocs(.*)$": "<rootDir>/src/hocs/$1"
    }
  }
}
